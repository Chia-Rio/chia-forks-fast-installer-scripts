[Unit]
Description=Chiadogecoin Harvester
Wants=network-online.target
After=network.target network-online.target
StartLimitIntervalSec=0

[Service]
Type=forking
Restart=always
RestartSec=1
User=toor
Environment=PATH=/usr/share/chia/chiadogecoin/venv/bin:${PATH}
ExecStart=/usr/bin/env chiadoge start harvester
ExecReload=/usr/bin/env chiadoge start harvester -r
ExecStop=/usr/bin/env chiadoge stop all -d

[Install]
WantedBy=multi-user.target
