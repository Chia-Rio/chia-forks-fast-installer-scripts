[Unit]
Description=Avocado Harvester
Wants=network-online.target
After=network.target network-online.target
StartLimitIntervalSec=0

[Service]
Type=forking
Restart=always
RestartSec=1
User=toor
Environment=PATH=/usr/share/chia/avocado-blockchain/venv/bin:${PATH}
ExecStart=/usr/bin/env avocado start harvester
ExecReload=/usr/bin/env avocado start harvester -r
ExecStop=/usr/bin/env avocado stop all -d

[Install]
WantedBy=multi-user.target