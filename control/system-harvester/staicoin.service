[Unit]
Description=Staicoin Harvester
Wants=network-online.target
After=network.target network-online.target
StartLimitIntervalSec=0

[Service]
Type=forking
Restart=always
RestartSec=1
User=toor
Environment=PATH=/usr/share/chia/staicoin-blockchain/venv/bin:${PATH}
ExecStart=/usr/bin/env staicoin start harvester
ExecReload=/usr/bin/env staicoin start harvester -r
ExecStop=/usr/bin/env staicoin stop all -d

[Install]
WantedBy=multi-user.target