[Unit]
Description=Spare Harvester
Wants=network-online.target
After=network.target network-online.target
StartLimitIntervalSec=0

[Service]
Type=forking
Restart=always
RestartSec=1
User=toor
Environment=PATH=/usr/share/chia/spare-blockchain/venv/bin:${PATH}
ExecStart=/usr/bin/env spare start harvester
ExecReload=/usr/bin/env spare start harvester -r
ExecStop=/usr/bin/env spare stop all -d

[Install]
WantedBy=multi-user.target