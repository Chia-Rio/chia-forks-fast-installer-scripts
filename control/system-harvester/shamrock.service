[Unit]
Description=Shamrock Harvester
Wants=network-online.target
After=network.target network-online.target
StartLimitIntervalSec=0

[Service]
Type=forking
Restart=always
RestartSec=1
User=toor
Environment=PATH=/usr/share/chia/shamrock-blockchain/venv/bin:${PATH}
ExecStart=/usr/bin/env shamrock start harvester
ExecReload=/usr/bin/env shamrock start harvester -r
ExecStop=/usr/bin/env shamrock stop all -d

[Install]
WantedBy=multi-user.target