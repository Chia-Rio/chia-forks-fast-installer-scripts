[Unit]
Description=Chia Harvester
Wants=network-online.target
After=network.target network-online.target
StartLimitIntervalSec=0

[Service]
Type=forking
Restart=always
RestartSec=30
User=toor
Environment=PATH=/usr/share/chia/chia-rosechain/venv/bin:${PATH}
ExecStart=/usr/bin/env chia start harvester
ExecReload=/usr/bin/env chia start harvester -r
ExecStop=/usr/bin/env chia stop all -d

[Install]
WantedBy=multi-user.target