[Unit]
Description=Scam All
Wants=network-online.target
After=network.target network-online.target
StartLimitIntervalSec=0

[Service]
Type=forking
Restart=always
RestartSec=30
User=toor
Environment=PATH=/usr/share/chia/scam-blockchain/venv/bin:${PATH}
ExecStart=/usr/bin/env scam start harvester
ExecReload=/usr/bin/env scam start harvester -r
ExecStop=/usr/bin/env scam stop all -d

[Install]
WantedBy=multi-user.target