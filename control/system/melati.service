[Unit]
Description=Melati All
Wants=network-online.target
After=network.target network-online.target
StartLimitIntervalSec=0

[Service]
Type=forking
Restart=always
RestartSec=1
User=toor
Environment=PATH=/usr/share/chia/melati-blockchain/venv/bin:${PATH}
ExecStart=/usr/bin/env melati start all
ExecReload=/usr/bin/env melati start all -r
ExecStop=/usr/bin/env melati stop all -d

[Install]
WantedBy=multi-user.target