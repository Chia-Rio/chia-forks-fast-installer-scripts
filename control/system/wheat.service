[Unit]
Description=Wheat All
Wants=network-online.target
After=network.target network-online.target
StartLimitIntervalSec=0

[Service]
Type=forking
Restart=always
RestartSec=1
User=toor
Environment=PATH=/usr/share/chia/wheat-blockchain/venv/bin:${PATH}
ExecStart=/usr/bin/env wheat start all
ExecReload=/usr/bin/env wheat start all -r
ExecStop=/usr/bin/env wheat stop all -d

[Install]
WantedBy=multi-user.target